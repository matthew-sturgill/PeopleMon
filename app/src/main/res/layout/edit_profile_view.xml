<?xml version="1.0" encoding="utf-8"?>
<mattsturgill.peoplemongo.Views.EditProfileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="New User Name"
        android:ems="10"
        android:id="@+id/edit_username"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <Button
        android:text="Pick a profile picture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/picture_button"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"/>

    <Button
        android:text="Update profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/update_profile"
        android:padding="8dp"/>

</mattsturgill.peoplemongo.Views.EditProfileView>